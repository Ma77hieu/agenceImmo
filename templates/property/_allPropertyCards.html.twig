<div class="count">
    <h3 class="mb-3">Nombre de biens disponibles au total: {{ pagination.getTotalItemCount }}</h3>
</div>

<div class="row flex">
    {% for article in pagination %}
        <div class="col-3">
            <div class="card my-2">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="{{ path('property.show', {id:article.id, slug:article.slug})}}">{{article.title}}</a>
                    </h5>
                    <p class="card-text">{{article.city}} ({{article.postalcode}})</p>
                    <p class="text-primary">{{article.formattedPrice}} â‚¬</p>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>