{% extends 'base.html.twig' %}
{% block title 'homepage' %}
{% block body %}
    <div class="bg-light p-5 border rounded-lg m-3 text-center">
        <h1>Agence Lorem Ipsum</h1>
        <p>Lorem ipsum dolor...</p>
    </div>
    <div class="container">
        <div class="row flex">
            {% for property in properties %}
                <div class="col-3">
                    <div class="card my-2">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('property.show', {id:property.id, slug:property.slug})}}">{{property.title}}</a>
                            </h5>
                            <p class="card-text">{{property.city}} ({{property.postalcode}})</p>
                            <p class="text-primary">{{property.formattedPrice}} â‚¬</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}